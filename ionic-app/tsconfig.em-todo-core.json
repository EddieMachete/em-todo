{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6",
      "scripthost"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./node_modules/em-todo-core/boundaries.ts",
    "./node_modules/em-todo-core/boundaries**/*.ts",
    "./node_modules/em-todo-core/domain.ts",
    "./node_modules/em-todo-core/domain/**/*.ts",
    "./node_modules/em-todo-core/usecases.ts",
    "./node_modules/em-todo-core/usecases/**/*.ts"
  ],
  "exclude": [
    "./node_modules/em-todo-core/usecases/specs/**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}